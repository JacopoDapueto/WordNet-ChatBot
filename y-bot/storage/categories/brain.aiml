<!--START: Categories to learn Lexical semantics -->

 <category>
        <pattern>* IS SYNONYM OF *</pattern>
        <template>
            <think>
                <set name="firstword">
                    <star/>
                </set>
                <set name="secondword">
                    <star index="2"/>
                </set>
            </think>
            <learnf>
                <category>
                    <pattern>
                        <eval><get name="firstword"/></eval>
                    </pattern>
                    <template>
                        <srai><eval><get name="secondword"/></eval></srai>
                    </template>
                </category>
            </learnf>
        </template>
  </category>

<category>
	<pattern>* IS HYPONYM OF *</pattern>

	<template>
		<learn>
			<category>
				<pattern><eval><star index="1" /></eval></pattern>
				<template>
					<srai><eval><star index="2"/></eval></srai>
				</template>
			</category>
		</learn>
	</template>
</category>

<category>
	<pattern>* IS HYPERNYM OF *</pattern>

	<template>
		<learn>
			<category>
				<pattern><eval><star index="1" /></eval></pattern>
				<template>
					<srai><eval><star index="2"/></eval></srai>
				</template>
			</category>
		</learn>
	</template>
</category>

<!-- END: Categories to learn Lexical semantics -->


