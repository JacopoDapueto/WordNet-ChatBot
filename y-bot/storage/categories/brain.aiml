<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

<!-- START: Basic/Initial interaction -->

<category>
	<pattern>HI</pattern>
	<template>Hi! <srai>WHO ARE YOU</srai></template>
</category>

<category>
	<pattern>MY NAME IS *</pattern>
	<template>Nice to meet you, <set name="username"><star/></set><srai>WHO ARE YOU</srai></template>
</category>


<category>
	<pattern>WHO ARE YOU</pattern>
	<template>I'm Guido, I'm here to help you in finding a guided tour led by a professional guide</template>
</category>

<category>
    <pattern>HOW MANY CATEGORIES DO YOU KNOW</pattern>
    <template>
        My brain contains<size /> categories.
    </template>
</category>


<!-- END: Basic/Initial interaction -->

<!--START: Categories to learn Lexical semantics -->

<category>
	<pattern>_ IS SYNONYM OF *</pattern>

	<template>

		<think>
                <set var="first"><first><star/></first></set>
                <set var="second"><rest><star index="2"/></rest></set>
         </think>

		<learn>
			<category>
				<pattern><get var="first" /></pattern>
				<template>
					<srai><get var="second" /></srai>
				</template>
			</category>
		</learn>
	</template>
</category>

<category>
	<pattern>* IS HYPONYM OF *</pattern>

	<template>
		<learn>
			<category>
				<pattern><eval><star index="1" /></eval></pattern>
				<template>
					<srai><eval><star index="2"/></eval></srai>
				</template>
			</category>
		</learn>
	</template>
</category>

<category>
	<pattern>* IS HYPERNYM OF *</pattern>

	<template>
		<learn>
			<category>
				<pattern><eval><star index="1" /></eval></pattern>
				<template>
					<srai><eval><star index="2"/></eval></srai>
				</template>
			</category>
		</learn>
	</template>
</category>

<!-- END: Categories to learn Lexical semantics -->


<!-- Ultimate Default Category -->
